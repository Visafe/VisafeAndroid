<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_24dp">

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingEnd="@dimen/_16dp"
            android:paddingStart="@dimen/_16dp"
            android:text="@string/delete_workspace_content"
            android:textColor="@color/color_111111"
            android:textSize="@dimen/text_size_18sp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:background="@drawable/bg_radius_24dp"
            android:backgroundTint="@color/color_FFB31F"
            android:gravity="center"
            android:padding="@dimen/_14dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGroup" />


        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_radius_24dp"
            android:backgroundTint="#1A111111"
            android:gravity="center"
            android:padding="@dimen/_14dp"
            android:text="@string/no"
            android:textColor="@color/color_111111"
            android:textSize="@dimen/text_size_16sp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirm" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>