<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_arrow_left_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:gravity="center"
            android:text="Đặt lại mật khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBack" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtInputPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:met_clearButton="false"
            app:met_floatingLabel="none"
            app:met_primaryColor="@color/black"
            app:met_textColorHint="@color/black" />

        <ImageView
            android:id="@+id/btnShowHidePassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_eye_close"
            app:layout_constraintBottom_toBottomOf="@+id/edtInputPassword"
            app:layout_constraintEnd_toEndOf="@+id/edtInputPassword"
            app:layout_constraintTop_toTopOf="@+id/edtInputPassword" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtInputPasswordAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/edtInputPassword"
            app:layout_constraintStart_toStartOf="@+id/edtInputPassword"
            app:layout_constraintTop_toBottomOf="@+id/edtInputPassword"
            app:met_clearButton="false"
            app:met_floatingLabel="none"
            app:met_primaryColor="@color/black"
            app:met_textColorHint="@color/black" />

        <ImageView
            android:id="@+id/btnShowHidePasswordAgain"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_eye_close"
            app:layout_constraintBottom_toBottomOf="@+id/edtInputPasswordAgain"
            app:layout_constraintEnd_toEndOf="@+id/edtInputPasswordAgain"
            app:layout_constraintTop_toTopOf="@+id/edtInputPasswordAgain" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/bg_button_f5bb16_radius_10"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
