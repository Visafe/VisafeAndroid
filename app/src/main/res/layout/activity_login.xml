<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/ic_logo_text"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/sf_pro_text_regular_bold"
        android:gravity="center"
        android:text="An toàn trên không gian mạng với Visafe"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="Đăng nhập để sử dụng tính năng nâng cao"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputEmail"
        style="@style/myEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:hint="@string/hint_input_email_or_numberphone"
        android:maxLength="50"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <ImageView
        android:id="@+id/btnClearTextInputEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_9sdp"
        android:src="@drawable/ic_close_circle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edtInputEmail"
        app:layout_constraintEnd_toEndOf="@+id/edtInputEmail"
        app:layout_constraintTop_toTopOf="@+id/edtInputEmail"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvInputEmailError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="start"
        android:textColor="@color/color_FF4451"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtInputEmail"
        app:layout_constraintStart_toStartOf="@+id/edtInputEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtInputEmail"
        tools:text="Bạn chưa có tài khoản? Đăng ký"
        tools:visibility="visible" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputPassword"
        style="@style/myEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:hint="@string/hint_input_password"
        android:inputType="textPassword"
        android:maxLength="50"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:singleLine="true"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/edtInputEmail"
        app:layout_constraintStart_toStartOf="@+id/edtInputEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvInputEmailError" />

    <TextView
        android:id="@+id/tvInputPasswordError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="start"
        android:textColor="@color/color_FF4451"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtInputPassword"
        app:layout_constraintStart_toStartOf="@+id/edtInputPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtInputPassword"
        tools:text="Bạn chưa có tài khoản? Đăng ký"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btnShowHidePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_9sdp"
        android:src="@drawable/ic_eye_off"
        app:layout_constraintBottom_toBottomOf="@+id/edtInputPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtInputPassword"
        app:layout_constraintTop_toTopOf="@+id/edtInputPassword" />

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/bg_button_color_primary_radius_8"
        android:gravity="center"
        android:text="@string/login"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="@+id/edtInputPassword"
        app:layout_constraintStart_toStartOf="@+id/edtInputPassword"
        app:layout_constraintTop_toBottomOf="@+id/tvInputPasswordError" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        tools:text="@string/text_have_not_acc_need_register" />

    <TextView
        android:id="@+id/btnForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:fontFamily="@font/sf_pro_text_regular_medium"
        android:gravity="center"
        android:text="@string/text_forgot_password"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvRegister" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:gravity="center"
        android:text="@string/quick_login_with"
        android:textColor="@color/color_aaaaaa"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/btnForgotPassword" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/color_d9d9d9"
        app:layout_constraintBottom_toBottomOf="@+id/tvOr"
        app:layout_constraintEnd_toStartOf="@+id/tvOr"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toTopOf="@+id/tvOr" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:background="@color/color_d9d9d9"
        app:layout_constraintBottom_toBottomOf="@+id/tvOr"
        app:layout_constraintEnd_toEndOf="@+id/btnLogin"
        app:layout_constraintStart_toEndOf="@+id/tvOr"
        app:layout_constraintTop_toTopOf="@+id/tvOr" />

    <ImageView
        android:id="@+id/btnLoginSocialFacebook"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/ic_logo_social_facebook"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvOr" />

    <ImageView
        android:id="@+id/btnLoginSocialGoogle"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/ic_logo_social_google"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvOr" />


</androidx.constraintlayout.widget.ConstraintLayout>