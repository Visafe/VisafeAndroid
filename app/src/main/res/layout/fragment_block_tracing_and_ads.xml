<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/white"
        android:focusable="true">

        <vn.ncsc.visafe.ui.custom.VisafeToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:toolbar_left_icon_src="@drawable/ic_arrow_left_black"
            app:toolbar_title="@string/thiet_lap_chan_quang_cao"
            app:toolbar_visible_title="true" />

        <View
            android:layout_below="@id/toolbar"
            android:id="@+id/vDivider"
            android:background="@color/color_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnSave"
            android:layout_below="@id/vDivider"
            android:background="@color/white"
            android:clipToPadding="false"
            android:paddingBottom="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="24dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_32dp"
                    android:fontFamily="@font/sf_pro_text_regular_bold"
                    android:gravity="center"
                    android:text="@string/block_tracking"
                    android:textColor="@color/color_111111"
                    android:textSize="@dimen/text_size_20sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <vn.ncsc.visafe.ui.custom.SwitchSimpleView
                    android:id="@+id/itemBlockAdsWeb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    app:sub_title="Chặn các quảng cáo hiển thị trên các website"
                    app:title="Chặn quảng cáo Website" />

                <vn.ncsc.visafe.ui.custom.SwitchSimpleView
                    android:id="@+id/itemBlockAdsGame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemBlockAdsWeb"
                    app:sub_title="Chặn các quảng cáo hiển thị trên các game, ứng dụng trên di động"
                    app:title="Chặn quảng cáo Game" />

                <vn.ncsc.visafe.ui.custom.SwitchSimpleView
                    android:id="@+id/itemBlockAdsApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemBlockAdsGame"
                    app:sub_title="Chặn các quảng cáo đặc thù của một số ứng dụng phổ biến"
                    app:title="Chặn quảng cáo ứng dụng" />

                <FrameLayout
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48dp"
                    android:layout_marginTop="@dimen/_12dp"
                    android:background="@drawable/bg_radius_8dp"
                    android:backgroundTint="@color/color_ECF7FE"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/itemBlockAdsApp"
                    app:layout_constraintTop_toBottomOf="@id/itemBlockAdsApp">

                    <TextView
                        android:drawablePadding="@dimen/_8dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/sf_pro_text_regular_bold"
                        android:textColor="@color/color_15A1FA"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset"
                        app:drawableStartCompat="@drawable/ic_refesh" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_24dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_radius_8dp"
            android:backgroundTint="@color/color_FFB31F"
            android:gravity="center"
            android:padding="@dimen/_12dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold" />
    </RelativeLayout>


</layout>