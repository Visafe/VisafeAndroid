<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/white"
        android:focusable="true">


        <RelativeLayout
            android:id="@+id/layoutToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:adjustViewBounds="true"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_18dp"
                android:src="@drawable/ic_arrow_left_black"
                app:tint="@color/color_111111" />

            <TextView
                android:textColor="@color/color_222222"
                android:fontFamily="@font/sf_pro_text_regular_bold"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="center"
                android:text="@string/thiet_lap_chan_theo_doi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <View
            android:layout_below="@id/layoutToolbar"
            android:id="@+id/vDivider"
            android:background="@color/color_EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnSave"
            android:layout_below="@id/vDivider"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:fontFamily="@font/sf_pro_text_regular_bold"
                android:gravity="center"
                android:text="@string/block_tracking"
                android:textColor="@color/color_111111"
                android:textSize="@dimen/text_size_20sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.vn.visafe_android.ui.custom.SwitchSimpleView
                android:id="@+id/itemBlockTrackingDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:sub_title="Chặn theo dõi, thu thập dữ liệu thông tin cá nhân trên các thiết bị, hệ điều hành"
                app:title="Chặn theo dõi trên thiết bị" />

            <FrameLayout
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_12dp"
                android:background="@drawable/bg_radius_8dp"
                android:backgroundTint="@color/color_ECF7FE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/itemBlockTrackingDevice"
                app:layout_constraintTop_toBottomOf="@id/itemBlockTrackingDevice">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/_8dp"
                    android:fontFamily="@font/sf_pro_text_regular_bold"
                    android:text="@string/reset"
                    android:textColor="@color/color_15A1FA"
                    android:textSize="@dimen/text_size_14sp"
                    app:drawableStartCompat="@drawable/ic_refesh" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:background="@drawable/bg_radius_34dp"
            android:backgroundTint="@color/color_FFB31F"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </RelativeLayout>


</layout>