<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_16dp"
    app:cardElevation="@dimen/_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16sdp">

        <TextView
            android:id="@+id/tvHomeUtilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/an_toan_tuyet_doi"
            android:textAllCaps="true"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHomeUtilitiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:text="@string/tien_ich_bao_mat"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/text_size_20sp"
            app:layout_constraintStart_toStartOf="@id/tvHomeUtilities"
            app:layout_constraintTop_toBottomOf="@id/tvHomeUtilities" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesProtectName"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_protect_name"
            app:layout_constraintEnd_toStartOf="@id/ivHomeUtilitiesWebsite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHomeUtilitiesTitle"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Bảo vệ \ndanh tính"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesProtectName"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesProtectName"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesProtectName" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesWebsite"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_home_website"
            app:layout_constraintEnd_toStartOf="@id/ivHomeUtilitiesEmail"
            app:layout_constraintStart_toEndOf="@id/ivHomeUtilitiesProtectName"
            app:layout_constraintTop_toBottomOf="@id/tvHomeUtilitiesTitle"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Website \ngiả mạo"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesWebsite"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesWebsite"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesWebsite" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesEmail"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_home_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHomeUtilitiesWebsite"
            app:layout_constraintTop_toBottomOf="@id/tvHomeUtilitiesTitle"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Email \ngiả mạo"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesEmail"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesEmail"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesEmail" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesFile"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_home_bug"
            app:layout_constraintEnd_toStartOf="@id/ivHomeUtilitiesWebsite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Kiểm tra \ntập tin"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesFile"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesFile"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesFile" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesBug"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_home_lock"
            app:layout_constraintEnd_toStartOf="@id/ivHomeUtilitiesDecryption"
            app:layout_constraintStart_toEndOf="@id/ivHomeUtilitiesFile"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Kiểm tra \nlỗ hổng"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesBug"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesBug"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesBug" />

        <ImageView
            android:id="@+id/ivHomeUtilitiesDecryption"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24dp"
            android:src="@drawable/ic_home_file"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHomeUtilitiesBug"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Giải mã \ntập tin"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesDecryption"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesDecryption"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesDecryption" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>