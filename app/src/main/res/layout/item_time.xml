<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:background="@drawable/bg_radius_16dp"
        android:backgroundTint="@color/color_ECECEC"
        android:padding="@dimen/_10dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:thumb="@drawable/thumb_selector"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/track_selector" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:constraint_referenced_ids="switchWidget" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:maxLines="1"
            android:textColor="@color/color_111111"
            android:textSize="@dimen/text_size_24sp"
            app:layout_constraintBottom_toBottomOf="@+id/switchWidget"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/switchWidget"
            tools:text="10:00:00" />

        <TextView
            android:id="@+id/viewOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_18dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/color_111111"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvStartTime"
            app:layout_constraintLeft_toRightOf="@+id/tvStartTime"
            app:layout_constraintTop_toTopOf="@+id/tvStartTime" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_18dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:maxLines="1"
            android:textColor="@color/color_111111"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/switchWidget"
            app:layout_constraintLeft_toRightOf="@+id/viewOne"
            app:layout_constraintTop_toTopOf="@+id/switchWidget"
            tools:text="10:00:00" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>