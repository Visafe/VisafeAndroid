<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.group.dashboard.GroupDashboardActivity">

    <com.vn.visafe_android.ui.custom.VisafeToolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        app:toolbar_left_icon_src="@drawable/ic_back"
        app:toolbar_right_icon_src="@drawable/ic_notification"
        android:layout_height="?actionBarSize" />

    <FrameLayout
        android:layout_marginTop="@dimen/_8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:background="@drawable/bg_stroke_1dp"
        android:padding="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_12dp"
            app:cardElevation="@dimen/_0dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabBar"
                style="@style/Base.Widget.Design.TabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabGravity="fill"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/TabLayoutCulture"
                app:tabTextColor="@color/color_111111" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <com.vn.visafe_android.ui.custom.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>