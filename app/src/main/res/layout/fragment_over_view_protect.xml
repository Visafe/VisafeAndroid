<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bgTop"
            android:layout_width="0dp"
            android:layout_height="@dimen/_170sdp"
            android:background="@drawable/bg_top_over_view_protect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp"
                android:fontFamily="@font/sf_pro_text_regular_bold"
                android:text="@string/thong_ke_chung"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:alpha="0.7"
                android:fontFamily="@font/sf_pro_text_regular_bold"
                android:text="Lần quét gần đây nhất 15 phút trước"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <TextView
                android:id="@+id/tvScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_white_radius_32"
                android:fontFamily="@font/sf_pro_text_regular_bold"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="QUÉT LẦN NỮA"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bgTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_F7F8FA"
                android:orientation="vertical">

                <include
                    android:id="@+id/layoutHomeProtect"
                    layout="@layout/layout_home_protect" />

                <include
                    android:id="@+id/layoutHomeChart"
                    layout="@layout/layout_home_chart" />

                <include
                    android:id="@+id/layoutAddVpn"
                    layout="@layout/layout_home_add_vpn" />

                <include
                    android:id="@+id/layoutHomeWebsite"
                    layout="@layout/layout_home_website" />

                <include
                    android:id="@+id/layoutHomeProtectFamily"
                    layout="@layout/layout_home_protect_family" />

                <include
                    android:id="@+id/layoutHomePass"
                    layout="@layout/layout_home_pass" />

                <include
                    android:id="@+id/layoutUpgrade"
                    layout="@layout/layout_upgrade" />

                <include
                    android:id="@+id/layoutUtilities"
                    layout="@layout/layout_home_utilities" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>