<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_16dp"
    app:cardElevation="@dimen/_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16sdp">

        <ImageView
            android:id="@+id/ivHomeWebsite"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_fake"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvHomeWebsiteTitle"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivHomeWebsite"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_toEndOf="@id/ivHomeWebsite"
            android:text="@string/bao_cao_website_lua_dao" />

        <TextView
            android:id="@+id/tvHomeWebsiteContent"
            style="@style/Content_Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHomeWebsiteTitle"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_toEndOf="@id/ivHomeWebsite"
            android:text="@string/bao_cao_website_content" />

        <View
            android:id="@+id/view"
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ivHomeWebsite"
            android:layout_marginTop="@dimen/_12sdp" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/btnHomeWebsiteReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:text="@string/bao_cao_ngay"
            android:textAllCaps="true"
            android:textColor="@color/color_FFB31F"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>