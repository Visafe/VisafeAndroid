<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_16dp"
    app:cardElevation="@dimen/_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_16sdp">

        <TextView
            android:id="@+id/tvHomeChartHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Trung bình 24 giờ"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tvHomeChartAmout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHomeChartHour"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:text="12,4K"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/text_size_24sp" />

        <TextView
            android:id="@+id/tvTitleChart"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/color_aaaaaa"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textSize="@dimen/text_size_12sp"
            android:text="@string/nguy_hai_da_chan"
            android:layout_below="@id/tvHomeChartAmout"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.highsoft.highcharts.core.HIChartView
            android:id="@+id/hiChartView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@id/tvTitleChart"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>