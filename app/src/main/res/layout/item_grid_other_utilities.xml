<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHomeUtilitiesProtectName"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_protect_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_horizontal"
            android:text="Bảo vệ \ndanh tính"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="@id/ivHomeUtilitiesProtectName"
            app:layout_constraintStart_toStartOf="@id/ivHomeUtilitiesProtectName"
            app:layout_constraintTop_toBottomOf="@id/ivHomeUtilitiesProtectName" />

    </LinearLayout>
</layout>