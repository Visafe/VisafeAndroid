<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_EEEEEE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:padding="@dimen/_10dp"
            android:src="@drawable/ic_arrow_left_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_222222"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular_bold"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_222222"
            android:paddingEnd="@dimen/_40sdp"
            android:paddingStart="@dimen/_40sdp"
            android:textSize="@dimen/text_size_16sp"
            android:text="@string/DNSsetting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingStart="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_shield_done"
                    android:scaleType="center"
                    app:tint="@color/cardview_dark_background"
                    android:layout_marginEnd="@dimen/_2dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp">
                    <TextView
                        android:text="@string/attt_mac_dinh"
                        android:textColor="@color/color_222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/attt_mac_dinh_subtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingStart="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_child_care"
                    android:scaleType="center"
                    app:tint="@color/cardview_dark_background"
                    android:layout_marginEnd="@dimen/_2dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/gia_dinh"
                        android:textColor="@color/color_222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/gia_dinh_subtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingStart="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_credit_card"
                    android:scaleType="center"
                    app:tint="@color/cardview_dark_background"
                    android:layout_marginEnd="@dimen/_2dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/attt_nang_cao"
                        android:textColor="@color/color_222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/attt_nang_cao_subtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_radio"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingStart="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_2dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_blur_circular"
                    app:tint="@color/cardview_dark_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ca_nhan_hoa"
                        android:textColor="@color/color_222222"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ca_nhan_hoa_subtext" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:buttonTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:buttonTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"/>
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:buttonTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white"/>
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_height_radio"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10dp"
                tools:ignore="RtlSymmetry"
                android:buttonTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/white" />
        </RadioGroup>
    </LinearLayout>



</LinearLayout>

