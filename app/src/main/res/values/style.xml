<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
    </style>

    <declare-styleable name="MaterialDialog">
        <attr name="material_dialog_background" format="color|reference" />

        <attr name="material_dialog_title_text_color" format="color|reference" />
        <attr name="material_dialog_message_text_color" format="color|reference" />

        <attr name="material_dialog_positive_button_text_color" format="color|reference" />
        <attr name="material_dialog_positive_button_color" format="color|reference" />

        <attr name="material_dialog_negative_button_text_color" format="color|reference" />
    </declare-styleable>

    <style name="TabLayoutCulture" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/color_111111</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_24dp</item>
        <item name="cornerSizeTopLeft">@dimen/_24dp</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_24dp</item>
        <item name="cornerSizeTopLeft">@dimen/_24dp</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="background">@drawable/bg_stroke_1dp</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>

    <style name="myEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/bg_custom_edittext</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_edittext</item>
    </style>

    <style name="AppThemeSplash" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_13sdp</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleToolbar">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular_bold</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular_bold</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="Content">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="Content_Bold">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular_bold</item>
        <item name="android:textColor">@color/color_222222</item>
    </style>

    <style name="Content_Small">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">0.5dp</item>
        <item name="android:background">@color/color_EEEEEE</item>
    </style>

    <style name="EditText_OTP">
        <item name="android:background">@drawable/bg_otp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular_bold</item>
        <item name="android:textColor">#161616</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">0123456789</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--push bottomsheet when show keyboard-->
    <style name="CustomBottomSheetDialogTheme2" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>